<section class="contact-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="google-map">
                    <div id="map" class="map-cont"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="contact-address">
                    <div class="contact-single">
                        <h4>Address</h4>
